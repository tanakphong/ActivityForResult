<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wesoft.activityforresult.MainActivity">

    <TextView
        android:id="@+id/txtDisplayResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.502"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/btnSecond"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Second Activity"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txtDisplayResult"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/txtDisplayResult"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/txtDisplayResult" />

    <Button
        android:id="@+id/btnThird"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Third Activity"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSecond"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/txtDisplayResult"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/txtDisplayResult" />

</android.support.constraint.ConstraintLayout>
